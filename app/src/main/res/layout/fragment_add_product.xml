<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product name"
            app:layout_constraintBottom_toTopOf="@+id/productNameInput"
            app:layout_constraintEnd_toEndOf="@+id/productNameInput"
            app:layout_constraintStart_toStartOf="@+id/productNameInput" />

        <EditText
            android:id="@+id/productNameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:autofillHints="Product name"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product price"
            app:layout_constraintBottom_toTopOf="@+id/productPriceInput"
            app:layout_constraintEnd_toEndOf="@+id/productPriceInput"
            app:layout_constraintStart_toStartOf="@+id/productPriceInput" />

        <EditText
            android:id="@+id/productPriceInput"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:autofillHints="Product price"
            android:ems="10"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productNameInput"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            app:layout_constraintBottom_toTopOf="@+id/productCategoryInput"
            app:layout_constraintEnd_toEndOf="@+id/productCategoryInput"
            app:layout_constraintStart_toStartOf="@+id/productCategoryInput" />

        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/productCategoryInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productPriceInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store name"
            app:layout_constraintBottom_toTopOf="@+id/storeNameInput"
            app:layout_constraintEnd_toEndOf="@+id/storeNameInput"
            app:layout_constraintStart_toStartOf="@+id/storeNameInput" />

        <EditText
            android:id="@+id/storeNameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:autofillHints="Product price"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productCategoryInput"
            tools:ignore="LabelFor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receipt date"
            app:layout_constraintBottom_toTopOf="@+id/receiptDateInput"
            app:layout_constraintEnd_toEndOf="@+id/receiptDateInput"
            app:layout_constraintStart_toStartOf="@+id/receiptDateInput" />
        <Button
            android:id="@+id/receiptDateInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:text="01-01-2023"
            app:layout_constraintTop_toBottomOf="@+id/storeNameInput"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receipt time"
            app:layout_constraintBottom_toTopOf="@+id/receiptTimeInput"
            app:layout_constraintEnd_toEndOf="@+id/receiptTimeInput"
            app:layout_constraintStart_toStartOf="@+id/receiptTimeInput" />
        <Button
            android:id="@+id/receiptTimeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="32dp"
            android:text="01:12"
            app:layout_constraintTop_toBottomOf="@+id/storeNameInput"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receiptDateInput" />


        <Button
            android:id="@+id/confirmAddProductButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="48dp"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/cancelAddProductButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="48dp"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>