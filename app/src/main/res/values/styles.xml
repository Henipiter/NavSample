<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:iconTint">@color/blue_200</item>


    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/background_color</item>
    </style>

    <style name="SortingCardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/sortingCardView</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>